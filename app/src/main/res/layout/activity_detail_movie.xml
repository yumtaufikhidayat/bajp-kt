<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.DetailMovieActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgBackdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@color/colorPrimary"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPoster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="@id/imgBackdrop"
            app:layout_constraintStart_toStartOf="@id/imgBackdrop">

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:src="@drawable/ic_loading"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/imgBackdrop"
            app:layout_constraintStart_toEndOf="@id/cardPoster"
            app:layout_constraintEnd_toEndOf="@id/tvOverview"
            tools:text="@string/tvTitle"/>

        <TextView
            android:id="@+id/tvReleasedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:text="@string/tvReleasedOn"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toEndOf="@id/tvReleasedOn"
            app:layout_constraintTop_toTopOf="@id/tvReleasedOn"
            app:layout_constraintBottom_toBottomOf="@+id/tvReleasedOn"
            tools:text="@string/tvReleaseDate"/>

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintTop_toBottomOf="@id/cardPoster"
            app:layout_constraintStart_toStartOf="@id/cardPoster"
            tools:text="@string/tvLoremIpsum"/>

        <TextView
            android:id="@+id/tvReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:text="@string/tvReadMore"
            android:textColor="@color/colorPrimaryAccent"
            app:layout_constraintStart_toStartOf="@id/cardPoster"
            app:layout_constraintTop_toBottomOf="@id/tvOverview"/>

        <View
            android:id="@+id/viewHelper1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="@id/tvOverview"
            app:layout_constraintEnd_toEndOf="@+id/tvOverview"
            app:layout_constraintTop_toBottomOf="@+id/tvReadMore"/>

        <LinearLayout
            android:id="@+id/llLayoutMisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/viewHelper1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_rate"
                app:tint="@color/colorTextOther"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/colorTextIcons"
                android:textSize="12sp"
                tools:text="@string/tvRating"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_language"
                app:tint="@color/colorTextOther"/>

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/colorTextIcons"
                android:textSize="12sp"
                tools:text="@string/tvLanguage"/>


        </LinearLayout>

        <View
            android:id="@+id/viewHelper2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/tvOverview"
            app:layout_constraintEnd_toEndOf="@+id/tvOverview"
            app:layout_constraintTop_toBottomOf="@+id/llLayoutMisc"/>

        <Button
            android:id="@+id/btnWebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/btnWebsites"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorOrange"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/viewHelper2"
            app:layout_constraintStart_toStartOf="@id/imgBackdrop"
            app:layout_constraintEnd_toEndOf="@id/tvOverview"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>