<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:scrollbars="none"
    tools:context=".ui.tvshow.activity.DetailTvShowActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgBackdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@color/colorPrimary"
            android:contentDescription="@string/tvBackdrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPoster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="@id/imgBackdrop"
            app:layout_constraintStart_toStartOf="@id/imgBackdrop">

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/tvPoster"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_loading"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:text="@string/tvTitle"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/imgBackdrop"
            app:layout_constraintStart_toEndOf="@id/cardPoster"
            app:layout_constraintEnd_toEndOf="@id/tvOverview" />

        <TextView
            android:id="@+id/tvReleasedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:text="@string/tvStartedOn"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorGrey"
            tools:text="@string/tvReleaseDate"
            app:layout_constraintStart_toEndOf="@id/tvReleasedOn"
            app:layout_constraintTop_toTopOf="@id/tvReleasedOn"
            app:layout_constraintBottom_toBottomOf="@+id/tvReleasedOn" />

        <LinearLayout
            android:id="@+id/llLayoutMisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/cardPoster"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/imgRating"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/tvRating"
                        android:src="@drawable/ic_rate"
                        app:tint="@color/colorTextOther"/>

                    <TextView
                        android:id="@+id/tvRatingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/colorTextOther"
                        android:textStyle="bold"
                        android:text="@string/tvRating"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorTextIcons"
                    tools:text="@string/tvRating"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/imgLanguage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/tvLanguage"
                        android:src="@drawable/ic_language"
                        app:tint="@color/colorTextOther"/>

                    <TextView
                        android:id="@+id/tvLanguageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/colorTextOther"
                        android:textStyle="bold"
                        android:text="@string/tvLanguage"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorTextIcons"
                    tools:text="@string/tvLanguage"
                    app:layout_constraintTop_toBottomOf="@id/tvLanguageTitle"
                    app:layout_constraintStart_toStartOf="@id/tvLanguageTitle"
                    app:layout_constraintEnd_toEndOf="@id/imgLanguage"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:textColor="@color/white"
            tools:text="@string/tvLoremIpsum"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintTop_toBottomOf="@id/llLayoutMisc"
            app:layout_constraintStart_toStartOf="@id/cardPoster"/>

        <TextView
            android:id="@+id/tvReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="12dp"
            tools:visibility="visible"
            android:visibility="gone"
            android:text="@string/tvReadMore"
            android:textColor="@color/colorPrimaryAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOverview"/>

        <TextView
            android:id="@+id/tvYouMayLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:text="@string/tvWatchAlso"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            app:layout_constraintTop_toBottomOf="@id/tvReadMore"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopMovieShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:itemCount="1"
            tools:listitem="@layout/item_top_movie_show"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvYouMayLike"
            app:layout_constraintStart_toStartOf="@id/tvOverview"
            app:layout_constraintEnd_toEndOf="@id/tvOverview"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/rvTopMovieShow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                tools:text="@string/btnShare"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/colorPrimaryAccent"
                app:cornerRadius="8dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnWebsite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                tools:text="@string/btnWebsites"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/colorYellow"
                app:cornerRadius="8dp"
                tools:ignore="ButtonStyle"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>